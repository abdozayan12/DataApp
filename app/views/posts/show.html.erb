<div class="container border-card p-4">
    <div class="flex-col items-center">
        <h1><%= @post.title %></h1>
        <span style="font-size: large; font-weight:300;">by <%= @user.name %></span>
        <span style="font-size: smaller; font-weight:100; margin-top: 10px">Comments : <%= @post.comment_counter %>, Likes : <%= @post.like_counter %></span>
    </div>

    <div class="post-text">
        <%= @post.text %>
    </div>

    <div class="comment-container">
        <%= form_with model: @comment, url: create_new_comment_path(user_id: @user.id, id: @post.id) ,class: "flex items-start gap-1" do |form| %>
            <%= form.text_area :text, size: "70x5" %>
            <%= form.submit "Add new comment" %>
        <% end %>
    </div>

    <div class="comment-container">
        <%= form_with model: @like, url: create_new_like_path(user_id: @user.id, id: @post.id) ,class: "flex items-start gap-1" do |form| %>
            <%= form.submit "Add likes comment", class: "w-full" %>
        <% end %>
    </div>
    
    <%= render partial: "comment_card", locals: {comments: @post.comments} %>
</div>